<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bselzer.gw2.manager.android">

    <application
        android:name=".ui.activity.common.AppInitializer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GW2Manager">
        <activity
            android:name=".ui.activity.wvw.WvwActivity"
            android:exported="true"
            android:theme="@style/Theme.GW2Manager.NoActionBar" />
        <activity
            android:name=".ui.activity.setting.SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.GW2Manager.NoActionBar" />
        <activity
            android:name=".ui.activity.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GW2Manager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>