import com.bselzer.gw2.v2.model.guild.upgrade.GuildUpgradeId;
import com.bselzer.gw2.v2.model.wrapper.ImageLink;

CREATE TABLE IF NOT EXISTS GuildUpgrade (
    Id INTEGER AS GuildUpgradeId NOT NULL,
    Name TEXT NOT NULL,
    Description TEXT NOT NULL,
    IconLink TEXT AS ImageLink NOT NULL,
    PRIMARY KEY(Id)
);

getById:
SELECT * FROM GuildUpgrade
WHERE Id = :id
LIMIT 1;

insertOrReplace:
REPLACE INTO GuildUpgrade (
    Id,
    Name,
    Description,
    IconLink
) VALUES :guildUpgrade;

deleteAll:
DELETE FROM GuildUpgrade;
