import kotlin.Int;

CREATE TABLE IF NOT EXISTS Tile (
    Zoom INTEGER AS Int NOT NULL,
    X INTEGER AS Int NOT NULL,
    Y INTEGER AS Int NOT NULL,
    Width REAL NOT NULL,
    Height REAL NOT NULL,
    Content BLOB NOT NULL,
    PRIMARY KEY (Zoom, X, Y)
);

getById:
SELECT * FROM Tile
WHERE Zoom = :zoom
AND X = :x
AND Y = :y
LIMIT 1;

insertOrReplace:
REPLACE INTO Tile(
    Zoom,
    X,
    Y,
    Width,
    Height,
    Content
) VALUES :tile;

deleteAll:
DELETE FROM Tile;