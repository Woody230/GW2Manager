CREATE TABLE IF NOT EXISTS Translation (
    Defaulted TEXT NOT NULL,
    Language TEXT AS com.bselzer.gw2.v2.client.model.Language NOT NULL,
    Translated TEXT NOT NULL,
    PRIMARY KEY (Defaulted, Language)
);

getById:
SELECT * FROM Translation
WHERE Defaulted = :defaulted
AND Language = :language
LIMIT 1;

insertOrReplace:
REPLACE INTO Translation(
    Defaulted,
    Language,
    Translated
) VALUES :translation;

deleteAll:
DELETE FROM Translation;